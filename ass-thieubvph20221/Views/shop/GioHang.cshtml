@model IEnumerable<ass_thieubvph20221.ViewModel.ChiTietGioHangView>
@{
    ViewData["Title"] = "GioHang";
}

<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                        <tr>
                            <th class="shoping__product">Ảnh</th>
                            <th class="shoping__product">Tên</th>
                            <th>Giá</th>
                            <th>số lượng</th>
                            <th>Tổng</th>
                            <th>Xóa</th>
                        </tr>
                        </thead>
                    
                    @foreach (var item in Model){
                        <tbody ng-repeat="ds in lstGioHang" ng-init="total = 0">
                        <tr>
                            <td class="shoping__cart__item">
                                <img src="~/image/@item.Giay.anh" alt="" style="height: 100px"/>
                               
                            </td>
                            <td
                                class="shoping__cart__item"> <h5>@item.Giay.tenGiay </h5>
                            </td>
                            <td class="shoping__cart__price">
                                    <span ng-model="ds.gia"> @item.Giay.donGiaban.ToString()$</span>
                            </td>
                            <td class="shoping__cart__quantity">
                                <div class="quantity">
                                    <div class="pro-qty">
                                        <input disabled
                                               type="text"
                                               value="@item.CTietGioHang.soLuong"/>
                                    </div>
                                </div>
                            </td>
                                <td class="shoping__cart__total">@(item.Giay.donGiaban*item.CTietGioHang.soLuong)$   </td>
                            <td class="shoping__cart__item__close">
                                <span class="icon_close"
                                      ng-click="deleteProductCart(ds.id)"></span>
                            </td>
                                <td><button class="primary-btn">@Html.ActionLink("Xoá", "XoaGH", new { id = item.CTietGioHang.id })</button></td>
                        </tr>

                        </tbody>
                    }
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__btns">
                    <a asp-controller="shop" asp-action="shop" class="primary-btn">CONTINUE SHOPPING</a>
                    <a href=""
                       ng-click="updateTotal()"
                       class="primary-btn cart-btn cart-btn-right"><span class="icon_loading"></span> Upadate Cart</a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="shoping__continue">
                    <div class="shoping__discount">
                        <h5>Discount Codes</h5>
                        <form action="#">
                            <input type="text" placeholder="Enter your coupon code" />
                            <button type="submit" class="site-btn">APPLY COUPON</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="shoping__checkout">
                    <h5>Cart Total</h5>
                    <ul>
                    @foreach (var item in Model)
                    {
                        <li>Subtotal <span ng-bind="total"></span><span>$</span></li>
                        <li>Total <span ng-bind="total"></span><span>@item.tongtien$</span></li>
                    }
                    </ul>
                    <a href="#" class="primary-btn">@Html.ActionLink("Thanh Toán", "ThanhToan", new {  })</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Shoping Cart Section End -->


